<div id="articles"></div>

<div id="comments">

</div>

<div class="card text-center">
  <div class="card-header">
    <h5 class="card-title">{{article.title}}</h5>
  </div>
  <div class="card-body">
    <p class="card-text">{{article.summary}}</p>
    <a href="{{article.link}}" class="btn btn-warning">See original article</a>
  </div>
  <div class="card-footer text-muted">
    <form action="/comment/{{article._id}}" method="POST" class="formInput">
      <div class="form-group">
        <input type="text" class="form-control" id="nameInput" placeholder="Name">
      </div>
      <div class="form-group">
        <textarea class="form-control" id="bodyInput" rows="3" placeholder="Leave Comment Here">
      </div>
    
    
    
    </form>
  </div>
</div>
<div class="article-container" id="{{article._id}}"></div>
  <div class="row">
    <div class="card">
        <div class="card-header">
          <h2 class="card-title">{{article.title}}</h2>
        </div>

        <div class="card-body">
          <p class="card-text">{{article.summary}}</p>
          <a href="{{article.link}}" class="btn btn-warning float-right">Original Article</a>
        </div>

        <div class="card-footer text-muted">
            <form action="/articles/{{article._id}}" method="POST" class="formInput" id="{{article._id}}">
              <div class="form-group">
                <input type="text" class="form-control" name="titleInput" id="titleInput" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="bodyInput" id="bodyInput" rows="3" placeholder="Leave Comment Here">
              </div> 
              <button type="submit" class="btn btn-info submit float-right" id="saveComment">Submit</button>
            </form>
        </div>
    </div>
  </div>

  <div class="row pt-2">
    <div class="wrapper" data-id={{article._id}}>
      <h2 class="comments">Comments:</h2>
      {{#if article.comment}}
      {{#each article.comment}}
      <div class="card">
        <p id="commentTitle">{{title}}</p>
        <p id="commentBody">{{body}}</p>
        <button class="btn btn-danger delete-comment" data-id="{{_id}}">Delete</button>
      </div>
      {{/each}}
      {{else}}
      <p>No comments yet but you could leave one!</p>
      {{/if}}
    </div>
  </div>
</div>